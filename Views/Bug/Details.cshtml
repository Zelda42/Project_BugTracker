@model BugTracker1._2025.Models.Bug

<h2>Bug Details</h2>

<dl class="row">
    <dt class="col-sm-2">Title:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description:</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Status:</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Priority:</dt>
    <dd class="col-sm-10">@Model.Priority</dd>

    <dt class="col-sm-2">Assigned To:</dt>
    <dd class="col-sm-10">@Model.AssignedToUser?.UserName ?? "Unassigned"</dd>
</dl>

<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
<a class="btn btn-secondary" asp-action="Index">Back to List</a>